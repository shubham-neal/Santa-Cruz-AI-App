{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "password": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "password"
      }
    },
    "existingIotHubName": {
      "type": "string",
      "metadata": {
        "description": "existingIotHubName"
      }
    },
    "AMP_STREAMING_URL": {
      "type": "string",
      "metadata": {
        "description": "AMP_STREAMING_URL"
      }
    },
    "AZUREEYE_MODULE_CONNECTION_STRING": {
      "type": "string",
      "metadata": {
        "description": "AZUREEYE_MODULE_CONNECTION_STRING"
      }
    },
    "STORAGE_BLOB_SHARED_ACCESS_SIGNATURE": {
      "type": "string",
      "metadata": {
        "description": "STORAGE_BLOB_SHARED_ACCESS_SIGNATURE"
      }
    },
    "WEBAPP_PACKAGE": {
      "type": "string",
      "metadata": {
        "description": "Package for the webapp"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "appServiceName": "[concat('ues-eyeasp',substring(uniqueString(subscription().id,resourceGroup().name),1,4))]",
    "webappName": "[concat('ues-eyeapp',substring(uniqueString(subscription().id,resourceGroup().name),1,4))]",
    "storageAccountName": "[concat('uesstorage',substring(uniqueString(subscription().id,resourceGroup().name),1,4))]",
    "applicationType": "people-tracking-azureeye-device",
    "accountSasProperties": {
      "signedServices": "b",
      "signedPermission": "lr",
      "signedExpiry": "2021-01-01T00:00:01Z",
      "signedResourceTypes": "sco"

    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "name": "[variables('appServiceName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "S1",
        "tier": "Standard",
        "size": "S1",
        "family": "S",
        "capacity": 1
      },
      "kind": "app",
      "tags": {
        "type": "[variables('applicationType')]"
      },
      "properties": {
        "perSiteScaling": false,
        "maximumElasticWorkerCount": 1,
        "isSpot": false,
        "reserved": false,
        "isXenon": false,
        "hyperV": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": 0
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-11-01",
      "name": "[variables('webappName')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[variables('appServiceName')]"
      ],
      "tags": {
        "edgeAIAppDeployment": "people-tracking-app",
        "type": "[variables('applicationType')]"
      },
      "kind": "app",
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(variables('webappName'), '.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Standard"
          },
          {
            "name": "[concat(variables('webappName'), '.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[concat(subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Web/serverfarms/', variables('appServiceName'))]",
        "reserved": false,
        "isXenon": false,
        "hyperV": false,
        "siteConfig": {},
        "scmSiteAlsoStopped": false,
        "clientAffinityEnabled": true,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": 0,
        "dailyMemoryTimeQuota": 0,
        "httpsOnly": false,
        "redundancyMode": "None"
      },
      "resources": [
        {
          "type": "config",
          "apiVersion": "2018-11-01",
          "name": "web",
          "dependsOn": [
            "[variables('webappName')]",
            "MSDeploy"
          ],
          "properties": {
            "webSocketsEnabled": true,
            "alwaysOn": true
          }
        },

        {
          "name": "connectionstrings",
          "type": "config",
          "apiVersion": "2020-06-01",
          "dependsOn": [
            "[variables('webappName')]",
            "MSDeploy"
          ],
          "properties": {
            "AZUREEYE_MODULE_CONNECTION_STRING": {
              "value": "[parameters('AZUREEYE_MODULE_CONNECTION_STRING')]",
              "type": "Custom"
            }
          }
        },


        {
          "type": "config",
          "apiVersion": "2018-11-01",
          "name": "appsettings",
          "dependsOn": [
            "[variables('webappName')]",
            "MSDeploy"
          ],
          "properties": {
            "STORAGE_BLOB_ACCOUNT": "[variables('storageAccountName')]",
            "PASSWORD": "[parameters('password')]",
            "WEBSITE_HTTPLOGGING_RETENTION_DAYS": "7",
            "WEBSITE_NODE_DEFAULT_VERSION": "10.15.2",
            "AMP_STREAMING_URL": "[parameters('AMP_STREAMING_URL')]",
            "IOT_HUB_NAME": "[parameters('existingIotHubName')]",
            "STORAGE_BLOB_SHARED_ACCESS_SIGNATURE": "[parameters('STORAGE_BLOB_SHARED_ACCESS_SIGNATURE')]"
          }
        },
        {
          "type": "Extensions",
          "apiVersion": "2018-11-01",
          "name": "MSDeploy",
          "location": "[variables('location')]",
          "dependsOn": [
            "[variables('webappName')]"
          ],
          "properties": {
            "packageUri": "[parameters('WEBAPP_PACKAGE')]"
          }
        }
      ]
    }
  ],
  "outputs": {
    "WebAppURL": {
      "type": "String",
      "value": "[concat('https://', variables('webappName'), '.azurewebsites.net')]"
    }
  }
}